@model DoAn_WebNangCao.Models.Exam

@{
    int num_of_quizs = Model.Quizs.Count;
    string open_tag = "<div class='row'> <div class='col - 11 offset - 1'>";
    string close_tag = "</div> </div>";
    int count = 1;
}
<div class="row">
    <div class="col-6 offset-3">
        <span>Danh sách câu hỏi</span>
    </div>
</div>
@for(int i = 0; i < num_of_quizs; i++)
{

    if(count == 1) 
    {
        @Html.Raw(open_tag);
        ++count;
    }
    <button type="button" 
            class="btn btn-outline-primary btn-quiz"
            onclick="window.location.href='@Url.Action("PeekQuiz", new { quiz_idx = i })'">
            @(i+1)
    </button>   
    if(count == 5 || i == (num_of_quizs - 1)) 
    {
        @Html.Raw(close_tag);
        count = 1;
    }
}
