@model IEnumerable<DoAn_WebNangCao.Models.Quiz>

@{
    Layout = null;
    int ID_CAU_HOI_1_DAP_AN = 1;
    int ID_CAU_HOI_NHIEU_DAP_AN = 2;
    int ID_CAU_HOI_SAP_XEP_THEO_THU_TU = 3;
    int ID_CAU_HOI_DIEN_VAO_CHO_TRONG = 4;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Kiểm tra đáp án</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@1,800&display=swap" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Content/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/Content/checkanswer.css" rel="stylesheet" />
    <link href="~/Content/sorted_quiz_check_answer.css" rel="stylesheet" />
    <link href="~/Content/fill_in_blank_quiz_check_answer.css" rel="stylesheet" />
</head>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!--Nav bar-->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                <!--Nav logo-->
                <a class="navbar-brand" href="#">
                    <img src="~/Content/images/logo_banner.png" alt="" width="60" height="50" class="d-inline-block align-text-top">
                </a>

                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h1 website-name">HUFLIT Quiz</span>
                </div>
            </nav>

            <!-- Main Content -->
            <div id="content">

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->

                    <div class="container-fluid">
                        @foreach (var quiz in Model)
                        {
                            var quiz_type_id = quiz.Cau_hoi.IDLoaiCauHoi;
                            if (quiz_type_id == ID_CAU_HOI_SAP_XEP_THEO_THU_TU)
                            {
                                Html.RenderAction("Check_answer", "Sorted_Quiz", new { quiz = quiz });
                            }
                            else if (quiz_type_id == ID_CAU_HOI_1_DAP_AN)
                            {
                                Html.RenderAction("Check_answer", "One_Correct_Answer_Quiz", new { quiz = quiz });
                            }
                            else if (quiz_type_id == ID_CAU_HOI_NHIEU_DAP_AN)
                            {
                                Html.RenderAction("Check_answer", "Multi_Correct_Answer_Quiz", new { quiz = quiz });
                            }
                            else if (quiz_type_id == ID_CAU_HOI_DIEN_VAO_CHO_TRONG)
                            {
                                Html.RenderAction("Check_answer", "Fill_In_Blank_Quiz", new { quiz = quiz });
                            }
                        }
                    </div>

                    <!--List button-->
                    <div class="list-btn" style="margin-top: 20px; margin-bottom: 20px">
                        <div class="row justify-content-center">
                            <div class="col-4" style="text-align: center">
                                <button onclick="location.href='@Url.Action("Index", "HomePage")';"
                                        class="btn btn-primary btn-icon-split"
                                        type="button">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-home"></i>
                                    </span>
                                    <span class="text">Trở về trang chủ</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Scripts/sb-admin-2.min.js"></script>
</body>
</html>
